<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Required permissions with justifications for Play Protect -->
    <!-- System overlay permission for edge lighting effects -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    
    <!-- Foreground service permissions for background notification monitoring -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    
    <!-- Wake lock for maintaining service during edge lighting animations -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <!-- Notification listener permission for intercepting notifications -->
    <uses-permission android:name="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE"
        android:protectionLevel="signature"
        tools:ignore="ReservedSystemPermission" />
    
    <!-- Post notifications permission for Android 13+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    
    <!-- Vibration permission for notification feedback -->
    <uses-permission android:name="android.permission.VIBRATE" />
    
    <!-- Full screen intent for notification handling -->
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />

    <!-- App category to help Play Protect understand the purpose -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="${appName}"
        android:theme="@style/AppTheme"
        android:appCategory="productivity"
        android:description="@string/app_description"
        android:requestLegacyExternalStorage="false"
        android:extractNativeLibs="false"
        android:debuggable="false"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="26">

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Notification Listener Service -->
        <service
            android:name=".EdgeNotificationListener"
            android:exported="true"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>

        <!-- Edge Lighting Service -->
        <service
            android:name=".EdgeLightingService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="Edge lighting notification effects" />
        </service>

    </application>

</manifest>
